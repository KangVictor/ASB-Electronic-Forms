/* components/recipientcard/recipientcard.wxss */
.margin-box{
  margin-top: 15rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 7rpx;
  padding-right: 20rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  align-content: center;
  background-color: white;
  color: black;
  border-radius: 25rpx;
  box-shadow: 0 2rpx 2rpx 0rpx rgba(0, 0, 0, 0.1), 0 1rpx 2rpx 0 rgba(0, 0, 0, 0.19);
}

.row-box{
  display: flex;
  flex-direction: row;
  align-content: center;
}

.recipient-name {
  font-size: 35rpx;
  flex: 10 0 0;
  align-self: center;
  margin-right: 10rpx;
}

.recipient-grade {
  font-size: 35rpx;
  flex:0.5 0 0;
  align-self: center;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.recipient-class {
  font-size: 35rpx;
  flex:0.5 0 0;
  align-self: center;
  margin-left: 10rpx;
  margin-right: 15rpx;
}

.recipient-quantity {
  font-size: 35rpx;
  align-self: center;
  flex:1.5 0 0;
  margin-left: 20rpx;
  margin-right: 5rpx;
}

.recipient-delete-button {
  padding-left: 30rpx;
  padding-right: 30rpx;
  /* padding-top: 5rpx;
  padding-bottom: 5rpx; */
  /* width: 70rpx;
  height: 48rpx; */
  align-self: center;
  text-align: center;
  border-radius: 20rpx;
  background-color: #558b2f;
  color: #ffe57f;
  font-size: 25rpx;
  margin-left: 5rpx;
  /* margin: 5rpx; */
}