<view class="section">
  <text class = "smallText">Name</text>
  <input class="inputBox" id="inputBoxName" bindinput="bindNameInput" placeholder='ex) Steve Wozniak'/>

  <picker bindchange="bindPickerGradeChange" value="{{indexGrade}}" range="{{arrayGrade}}">
    <view class="smallPicker">
      Grade：{{arrayGrade[indexGrade]}}
    </view>
  </picker>

  <picker bindchange="bindPickerClassChange" value="{{indexClass}}" range="{{arrayClass}}">
    <view class="smallPicker">
      Class：{{arrayClass[indexClass]}}
    </view>
  </picker>

  <text class = "smallText"> {{itemNames[0]}} ({{itemPrices[0]}} CNY)</text>
  <input class="inputBox" id="inputBoxQuantityA" placeholder='0' type='number' bindinput='bindInputBoxQuantityA'/>
  <text class = "smallText"> {{itemNames[1]}} ({{itemPrices[1]}} CNY)</text>
  <input class="inputBox" id="inputBoxQuantityB" placeholder='0' type='number' bindinput='bindInputBoxQuantityB'/>
  <text class = "smallText"> {{itemNames[2]}} ({{itemPrices[2]}} CNY)</text>
  <input class="inputBox" id="inputBoxQuantityC" placeholder='0' type='number' bindinput='bindInputBoxQuantityC'/>
  <text class = "costText">Cost: {{cost}} CNY</text>
  <button class="submitButton" bindtap="onSubmit">Submit</button>
</view>