<view style='align-content:center'>
  <swiper
    class='itemImgSwiper'
    indicator-dots="{{indicatorDots}}"
    autoplay="{{autoplay}}"
    interval="{{interval}}"
    duration="{{duration}}"
    circular='{{circular}}'
  >
    <block wx:for="{{imgUrls}}" wx:key="*this">
      <swiper-item>
        <image src="{{item}}" class="slide-image" width="100" height="150" />
      </swiper-item>
    </block>
  </swiper>

  <view class="userinfo">
    <text style='margin-top: 20px'>Welcome!</text>
    <open-data class="userinfo-avatar" type="userAvatarUrl"></open-data>
    <open-data type="userNickName"></open-data>
  </view>

  <button 
    bindtap="bindPurchase"
    class="goButton">
    Go purchase
  </button>

  <button
    disabled="{{adminButtonDisabled}}"
    style='margin-top:100px; margin-botton:200px; background-color:{{backColor}}; color:{{whiteFont}}'
    bindtap='onAdminButton'
  >
    orders (ASB)
  </button>
</view>