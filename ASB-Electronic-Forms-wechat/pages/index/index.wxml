<!--index.wxml-->
<view class="section">
  <text class = "smallText">Name</text>
  <input class="inputBox" id="inputBoxName" bindinput="bindKeyInput"/>
  <picker bindchange="bindPickerClassChange" value="{{indexClass}}" range="{{arrayClass}}">
    <view class="picker">
      Class：{{arrayClass[indexClass]}}
    </view>
  </picker>
  <input class="inputBox" id="inputBoxQuantityA"/>
  <input class="inputBox" id="inputBoxQuantityB"/>
  <input class="inputBox" id="inputBoxQuantityC"/>
  <button class="submitButton" bindtap="onInput">
    Submit
  </button>
</view>

<view class="row-container">
 <text>Success!</text>
 <text>Go to</text>
 <text>ZXB lobby</text>
 <text>during lunch</text>
 <text>to confirm.</text>
 <text>_________________________</text>
 <text>{{code}}</text>
</view>

