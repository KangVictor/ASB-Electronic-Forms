<!--index.wxml-->
<view class="section">
  <input id="inputBox" bindinput="bindKeyInput" placeholder="input your name" focus="{{focus}}"/>
  <view class="btn-area">
    <button bindtap="onInput">Finish input</button>
  </view>
  <view class="section__title">Your name is: {{inputValue}}</view>
</view>

<view class="row-container">
 <text>Success!</text>
 <text>Go to</text>
 <text>ZXB lobby</text>
 <text>during lunch</text>
 <text>to confirm.</text>
 <text>_________________________</text>
 <text>{{code}}</text>
</view>

<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>