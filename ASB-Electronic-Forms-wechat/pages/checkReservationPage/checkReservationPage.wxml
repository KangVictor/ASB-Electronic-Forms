<input class="inputBox" bindinput="bindSearchInput" placeholder='Name or code'/>

<scroll-view class="scroller" scroll-y="true">
  <block wx:for="{{showReservation}}" wx:length="{{showNum}}" wx:key="unique" style="display: block">
    <view class="resBoxWrapper" bindtap='onConfirm' id='{{item._id}}'>
      <view>
      {{item._id}}: {{item.studentName}} {{item.studentGrade}}({{item.studentClass}})
      </view>
      <br />

      <view wx:for="{{[0,1,2,3,4]}}" wx:for-item="i">
        <view wx:if="{{item.studentQuan[i] != 0}}">
          {{items[i].name}} : {{item.studentQuan[i]}} 
        </view>
        <br />
      </view>
      
      <view>
      {{item.studentTotal}} pt
      </view>
      <br />
      <view >
      confirmed: {{item.confirmed}}
      </view>
    </view>
  </block>
</scroll-view> 


